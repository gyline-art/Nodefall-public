<Window x:Class="Nodefall.Windows.BattleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nodefall.Windows"
        mc:Ignorable="d"
        Title="BattleWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="PlayerLineUp"
                    Grid.Column="0" Grid.Row="1"
                    Orientation="Vertical"
                    VerticalAlignment="Center" HorizontalAlignment="Center">
            
        </StackPanel>

        <StackPanel x:Name="EnemyLineUp"
                    Grid.Column="2" Grid.Row="1"
                    Orientation="Vertical"
                    VerticalAlignment="Center" HorizontalAlignment="Center">

        </StackPanel>

        <StackPanel x:Name="InteractiveButtons"
                    Grid.ColumnSpan="3" Grid.Row="2"
                    Orientation="Horizontal">

            <Button x:Name="AttackButton" Content="Attack"
                    Click="Attack_Button_Click"
                    Height="65" Width="150" Margin="10,0,10,0"/>
            
            <Button x:Name="DefendButton" Content="Denfend"
                    Click="Defend_Button_Click"
                    Height="65" Width="150" Margin="10,0,10,0"/>
            
            <Button x:Name="AbilityButton" Content="Ability"
                    Click="Ability_Button_Click"
                    Height="65" Width="150" Margin="10,0,10,0"/>

        </StackPanel>

        <Button x:Name="AnnouncerButton" Content="{Binding GameAnnouncement}"
                Click="BattleResult_Button_Click"
                Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Top"
                Height="80"/>

        <Button x:Name="RetreatButton" Content="Flee"
                Click="Retreat_Button_Click"
                Grid.Column="2" Grid.Row="2"
                Height="50" Width="100" Margin="20"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
