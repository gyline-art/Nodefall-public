<UserControl x:Class="Nodefall.Windows.Components.EventCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nodefall.Windows.Components"
             xmlns:hp="clr-namespace:Nodefall.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="230">
    <UserControl.Resources>
        <hp:BoolToBrushConverter x:Key="BoolToBrush"/>
    </UserControl.Resources>
    <Border CornerRadius="13"
            Margin="10"
            Background="CadetBlue"
            BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToBrush}}"
            BorderThickness="3">
        <Button Background="Transparent"
                BorderThickness="0"
                Click="Card_Click"
                Padding="13">
            <StackPanel Width="170">

                <Border Background="AliceBlue"
                        BorderThickness="3"
                        BorderBrush="LightSlateGray"
                        CornerRadius="8"
                        Height="40"
                        Margin="0,0,0,10">
                    <TextBlock x:Name="Title"
                               Text="{Binding EventCard.Title}"
                               FontSize="16"
                               TextAlignment="Center"/>

                </Border>

                <Border Background="AliceBlue"
                        BorderThickness="3"
                        BorderBrush="SlateGray"
                        CornerRadius="8"
                        Height="170">
                    <TextBlock x:Name="Content"
                               Text="{Binding EventCard.Description}"
                               FontSize="13"
                               Padding="2"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>

                </Border>

            </StackPanel>
        </Button>
    </Border>
</UserControl>
