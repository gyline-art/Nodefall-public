<Window x:Class="Nodefall.Windows.CustomizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nodefall.Windows"
        xmlns:data="clr-namespace:Nodefall.GameData"
        mc:Ignorable="d"
        Title="CustomizeWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <Grid Grid.Row="0" Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Orientation="Horizontal">

                <Label Content="Name" 
                       VerticalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       Width="70"/>

                <TextBox x:Name="CharName"
                         Text="{Binding EditCopy.Name, Mode=TwoWay}"
                         Width="200"/>

            </StackPanel>
            
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal">

                <Label Content="Archetype" 
                       VerticalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       Width="70"/>

                <ComboBox x:Name="CharArchetype"
                          ItemsSource="{Binding Archetypes}" SelectedItem="{Binding EditCopy.Archetype, Mode=TwoWay}"
                          Width="200"/>

            </StackPanel>
            
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal">

                <Label Content="Ability" 
                       VerticalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       Width="70"/>

                <ComboBox x:Name="CharAbility"
                          ItemsSource="{Binding Abilities}" SelectedItem="{Binding EditCopy.Ability, Mode=TwoWay}"
                          Width="200"/>

            </StackPanel>
        </Grid>


        <Grid Grid.Row="0" Grid.Column="1" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="CharStats"
                       Grid.Row="0"
                       Text="{Binding EditCopyAttributes, Mode=OneWay}" FontFamily="Consolas"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <Button x:Name="AddButton"
                        Content="Add"
                        Click="Add_Button_Click"/>

                <Button x:Name="SaveButton"
                        Content="Save"
                        Click="Save_Button_Click"/>

                <Button x:Name="DeleteButton"
                        Content="Delete"
                        Click="Delete_Button_Click"/>

            </StackPanel>
        </Grid>


        <DataGrid Grid.Row="1" Grid.ColumnSpan="2"
                  ItemsSource="{Binding Manager.Characters}" SelectedItem="{Binding SelectedCharacter, Mode=TwoWay}"
                  AutoGenerateColumns="False" IsReadOnly="True" SnapsToDevicePixels="True" 
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  HorizontalScrollBarVisibility="Disabled">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"
                                    Width="*"/>
                <DataGridTextColumn Header="Archetype" Binding="{Binding Archetype.Name}"
                                    Width="*"/>
                <DataGridTextColumn Header="Ability" Binding="{Binding Ability.Name}"
                                    Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        
    </Grid>
</Window>